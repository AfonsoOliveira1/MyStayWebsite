@model UserUpdateDto

<div class="profile-wrapper">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-photo-icon">
                <i class="bi bi-person-fill"></i>
            </div>
            <div class="profile-header-text">
                <h3 class="user-name">@Model.Name</h3>
                <h2 class="profile-title">@Localizer["ProfileManagement"]</h2>
            </div>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="ProfileEdit" method="post" class="profile-form-grid">
            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <label for="Name">@Localizer["Name"]</label>
            </div>

            <div class="form-floating">
                <input asp-for="Email" class="form-control" placeholder="Email" readonly />
                <label for="Email">Email</label>
            </div>

            <div class="form-floating">
                <select asp-for="Role" class="form-select">
                    <option value="CUSTOMER">@Localizer["Customer"]</option>
                    <option value="COMPANY">@Localizer["CompanyAirline"]</option>
                    <option value="ADMIN">@Localizer["Admin"]</option>
                </select>
                <label for="Role">Role</label>
            </div>

            <div class="form-floating">
                <select asp-for="Role" class="form-select">
					<option value="">@Localizer["SelectCompany"]</option>
                    <option value="AirlineId">Airline</option>
                    <option value="RenterId">Renter</option>
                </select>
                <label for="Role">Role</label>
            </div>

            <div class="form-floating">
                <input id="newpass" name="newpass" type="password" class="form-control" placeholder="@Localizer["NewPassword"]" />
                <label for="newpass">@Localizer["NewPassword"]</label>
            </div>

            <div class="form-floating">
                <input id="confirmpass" name="confirmpass" type="password" class="form-control" placeholder="@Localizer["Confirm"]" />
                <label for="confirmpass">@Localizer["Confirm"]</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">@Localizer["SaveChanges"]</button>
            </div>
        </form>
    </div>
</div>