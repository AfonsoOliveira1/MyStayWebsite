@model UserUpdateDto

<div class="profile-wrapper">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-photo-icon">
                <i class="bi bi-person-fill"></i>
            </div>
            <div class="profile-header-text">
                <h3 class="user-name">@Model.Name</h3>
                <h2 class="profile-title">Profile Management</h2>
            </div>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="ProfileEdit" method="post" class="profile-form-grid">
            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <label for="Name">Name</label>
            </div>

            <div class="form-floating">
                <input asp-for="Email" class="form-control" placeholder="Email" readonly />
                <label for="Email">Email (Não editável)</label>
            </div>

            <div class="form-floating">
                <select asp-for="Role" class="form-select">
                    <option value="CUSTOMER">Customer</option>
                    <option value="COMPANY">Company/Airline</option>
                    <option value="ADMIN">Admin</option>
                </select>
                <label for="Role">Role</label>
            </div>

            <div class="form-floating">
                <input id="newpass" name="newpass" type="password" class="form-control" placeholder="NewPassword" />
                <label for="newpass">New Password</label>
            </div>

            <div class="form-floating">
                <input id="confirmpass" name="confirmpass" type="password" class="form-control" placeholder="ConfirmPassword" />
                <label for="confirmpass">Confirm Password</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div class="profile-wrapper">
    <div class="profile-card">
        <h2 class="mb-4 text-center">Two-Factor Authentication</h2>
        <div class="alert alert-warning">
            A funcionalidade de 2FA será configurada em breve.
        </div>
    </div>
</div>