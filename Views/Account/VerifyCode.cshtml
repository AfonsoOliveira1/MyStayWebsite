@model Booking.web.Models.VerifyCodeDTO

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

        <div class="card mt-5 shadow-sm">
            <div class="card-body p-4">

                <h3 class="text-center mb-4">@Localizer["VerifyEmail"]</h3>

                <p class="text-muted text-center mb-4">
                    @Localizer["EmailVerificationMessage"]
                </p>

                <form asp-action="VerifyCode"
                      asp-route-email="@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value"
                      method="post" novalidate>

                    <div class="mb-3">
                        <label asp-for="Code" class="form-label">@Localizer["VerificationCode"]</label>
                        <input asp-for="Code"
                               class="form-control text-center"
                               maxlength="6"
                               placeholder="______"
                               style="font-size: 1.5rem; letter-spacing: 10px;" />
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            @Localizer["Confirm"]
                        </button>
                    </div>
                </form>

                <hr class="my-4" />

                <div class="text-center mb-3">
                    <span class="text-muted me-2">@Localizer["CodeNotReceived"]</span>
                    <form asp-action="ResendCode" method="post" class="d-inline">
                        <input type="hidden" name="Email"
                               value="@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value" />
                        <button type="submit"
                                class="btn p-0 text-primary text-decoration-underline"
                                style="background: none; border: none;">
                            @Localizer["SendCode"]
                        </button>
                    </form>
                </div>

            </div>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3 text-center">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="mb-1">@error.ErrorMessage</p>
                }
            </div>
        }

    </div>
</div>
