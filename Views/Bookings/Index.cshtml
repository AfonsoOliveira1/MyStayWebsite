@model IEnumerable<Booking.web.Models.BookingViewModel>
<div class="container mt-4">
    <h2>My Bookings</h2>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Type</th>
                <th>Item</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Type</td>
                    <td>@b.ItemName</td>
                    <td><span class="badge @(b.IsActive ? "bg-success" : "bg-danger")">@b.Status</span></td>
                    <td>
                        @if (b.IsActive)
                        {
                            <form asp-action="Cancel" method="post">
                                <input type="hidden" name="bookingId" value="@b.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>