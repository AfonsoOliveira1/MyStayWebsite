@model Booking.web.Models.UserBookingHistory

@{
    var totalGastoVoos = Model.Flights.Sum(f => f.Price);
    var totalGastoAlojamento = Model.Housings.Where(h => h.TotalPrice > 0).Sum(h => h.TotalPrice);
    var totalReservas = Model.Flights.Count + Model.Housings.Count;
    var investimentoTotal = totalGastoVoos + totalGastoAlojamento;
}

<style>
    .page-wrapper {
        display: flex;
        margin-top: 80px;
        gap: 20px;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .content {
        flex: 1;
    }

    .main-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #1a1a1a;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .dashboard-summary {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 40px;
        align-items: stretch;
    }

    .stats-grid {
        flex: 2;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .chart-container {
        flex: 1;
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        border: 1px solid #eee;
        min-width: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 15px;
        border: 1px solid #eee;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        text-align: center;
    }

    .stat-value {
        font-size: 1.6rem;
        font-weight: 800;
        color: #2c3e50;
        display: block;
    }

    .stat-label {
        font-size: 0.8rem;
        color: #7f8c8d;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .section-title {
        margin: 20px 0;
        border-bottom: 2px solid #ddd;
        padding-bottom: 10px;
        color: #333;
    }

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .card-booking {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.2s;
    }

        .card-booking:hover {
            transform: translateY(-5px);
        }

    .card-flight {
        border-top: 6px solid #0078ff;
    }

    .card-housing {
        border-top: 6px solid #28a745;
    }

    .price {
        font-size: 1.2em;
        font-weight: bold;
        margin: 10px 0;
        color: #2c3e50;
    }

    .rating-form {
        background: #fdfdfd;
        padding: 15px;
        border-radius: 8px;
        margin-top: 15px;
        border: 1px solid #eee;
    }

    .rated-badge {
        background-color: #f8f9fa;
        border: 1px solid #d4edda;
        color: #155724;
        padding: 12px;
        border-radius: 8px;
        margin-top: 10px;
    }
</style>

<div class="page-wrapper">
    <div class="content">
        <h1 class="main-title">📂 Histórico de Viagens</h1>

        <div class="dashboard-summary">
            <div class="stats-grid">
                <div class="stat-card">
                    <span class="stat-label">Total Reservas</span>
                    <span class="stat-value">@totalReservas</span>
                </div>
                <div class="stat-card" style="border-left: 5px solid #0078ff;">
                    <span class="stat-label">Gasto em Voos</span>
                    <span class="stat-value">€@totalGastoVoos.ToString("N2")</span>
                </div>
                <div class="stat-card" style="border-left: 5px solid #28a745;">
                    <span class="stat-label">Alojamentos</span>
                    <span class="stat-value">€@totalGastoAlojamento.ToString("N2")</span>
                </div>
                <div class="stat-card" style="background: #2c3e50; color: white;">
                    <span class="stat-label" style="color: #bdc3c7;">Investimento Total</span>
                    <span class="stat-value" style="color: white;">€@investimentoTotal.ToString("N2")</span>
                </div>
            </div>

            <div class="chart-container">
                <span class="stat-label mb-2">Distribuição de Gastos</span>
                <canvas id="spendingChart" style="max-height: 180px;"></canvas>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger shadow-sm">@TempData["Error"]</div>
        }

        <h2 class="section-title">✈️ Voos</h2>
        <div class="cards-grid">
            @foreach (var f in Model.Flights)
            {
                <div class="card-booking card-flight">
                    <div>
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>Voo #@f.Id</strong>
                            <span class="badge bg-primary">@f.Status</span>
                        </div>
                        <h4 class="mt-2">@f.OriginCityName → @f.DestinationCityName</h4>
                        <p class="mb-1">📅 @f.DepartureTime.ToString("dd/MM/yyyy HH:mm")</p>
                        <p>💺 Lugar: @f.SeatNumber</p>
                    </div>
                    <div>
                        <div class="price">€@f.Price</div>
                        <a asp-controller="Bookings" asp-action="Receipt" asp-route-id="@f.Id" class="btn btn-sm btn-outline-primary w-100">Ver Talão</a>
                    </div>
                </div>
            }
        </div>

        <h2 class="section-title">🏨 Alojamentos</h2>
        <div class="cards-grid">
            @foreach (var h in Model.Housings)
            {
                <div class="card-booking card-housing">
                    <div>
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>@h.HousingName</strong>
                            <span class="badge @(h.Status == "Confirmed" ? "bg-success" : "bg-secondary")">@h.Status</span>
                        </div>
                        <p class="mt-2 mb-1">📅 @h.CheckInDate.ToString("dd/MM/yyyy") - @h.CheckOutDate.ToString("dd/MM/yyyy")</p>
                        <div class="price">Total: €@h.TotalPrice</div>
                    </div>

                    @if (h.Status == "Confirmed" && DateTime.Now.Date >= h.CheckInDate.Date)
                    {
                        if (!h.HasRating)
                        {
                            <div class="rating-form">
                                <form asp-controller="Housing" asp-action="EnviarRating" method="post">
                                    <input type="hidden" name="housingId" value="@h.HousingId" />
                                    <div class="mb-3">
                                        <label>Sua Nota:</label>
                                        <select name="score" class="form-select" required>
                                            <option value="5">5 - Excelente</option>
                                            <option value="4">4 - Muito Bom</option>
                                            <option value="3">3 - Bom</option>
                                            <option value="2">2 - Razoável</option>
                                            <option value="1">1 - Mau</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label>Comentário:</label>
                                        <textarea name="comment" class="form-control" rows="2" placeholder="Como foi a sua estadia?"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-warning w-100 fw-bold">Enviar Avaliação</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div class="rated-badge">
                                <div class="fw-bold mb-1" style="color: #28a745;">
                                    ✓ A tua Avaliação:
                                    <span>
                                        @for (int i = 0; i < h.RatingScore; i++)
                                        {
                                            <text>⭐</text>
                                        }
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(h.RatingComment))
                                {
                                    <p class="mb-0 small text-muted" style="font-style: italic;">"@h.RatingComment"</p>
                                }
                            </div>
                        }
                    }
                    else if (h.Status == "Confirmed")
                    {
                        <div class="text-muted mt-2 small text-center">
                            🕒 Disponível após o check-in (@h.CheckInDate.ToShortDateString())
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const ctx = document.getElementById('spendingChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Voos', 'Alojamentos'],
                datasets: [{
                    data: [@totalGastoVoos.ToString().Replace(",", "."), @totalGastoAlojamento.ToString().Replace(",", ".")],
                    backgroundColor: ['#0078ff', '#28a745'],
                    borderWidth: 2,
                    hoverOffset: 4
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom', labels: { boxWidth: 12, font: { size: 10 } } }
                },
                cutout: '70%'
            }
        });
    });
</script>