@model Booking.web.Models.UserBookingHistory

<style>
    .page-wrapper {
        display: flex;
        margin-top: 80px;
        gap: 20px;
        padding: 20px;
    }

    .content {
        flex: 1;
    }

    .section-title {
        margin: 20px 0;
        border-bottom: 2px solid #ddd;
        padding-bottom: 10px;
    }

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .card-booking {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        position: relative;
    }

    .card-flight {
        border-top: 6px solid #0078ff;
    }

    .card-housing {
        border-top: 6px solid #28a745;
    }

    .rating-form {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 8px;
        margin-top: 15px;
        border: 1px solid #eee;
    }

        .rating-form select, .rating-form textarea {
            width: 100%;
            margin-bottom: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 5px;
        }

    .btn-submit-rating {
        background: #febb02;
        border: none;
        padding: 8px;
        width: 100%;
        font-weight: bold;
        cursor: pointer;
    }
</style>

<div class="page-wrapper">

    <div class="content">

        <h2 class="section-title">✈️ Meus Voos</h2>
        <div class="cards-grid">
            @foreach (var f in Model.Flights)
            {
                <div class="card-booking card-flight">
                    <div class="d-flex justify-content-between">
                        <strong>Voo #@f.Id</strong>
                        <span class="badge bg-primary">@f.Status</span>
                    </div>
                    <h4>@f.OriginCityName → @f.DestinationCityName</h4>
                    <p>📅 @f.DepartureTime.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>💺 Lugar: @f.SeatNumber</p>
                    <div class="price">€@f.Price</div>
                    <a asp-action="Receipt" asp-route-id="@f.Id" class="btn btn-sm btn-outline-primary w-100 mt-2">Ver Talão</a>
                </div>
            }
        </div>

        <h2 class="section-title">🏨 Meus Alojamentos</h2>
        <div class="cards-grid">
            @foreach (var h in Model.Housings)
            {
                <div class="card-booking card-housing">
                    <div class="d-flex justify-content-between">
                        <strong>@h.HousingName</strong>
                        <span class="badge bg-success">@h.Status</span>
                    </div>
                    <p>📅 @h.CheckInDate.ToShortDateString() até @h.CheckOutDate.ToShortDateString()</p>
                    <div class="price">Total: €@h.TotalPrice</div>

                    @if (h.Status == "Confirmed" && h.HasRating == false)
                    {
                        <div class="rating-form">
                            <form asp-controller="Housing" asp-action="EnviarRating" method="post">
                                <input type="hidden" name="housingId" value="@h.HousingId" />

                                <select name="score" required>
                                    <option value="5">5 - Excelente</option>
                                    <option value="4">4 - Muito Bom</option>
                                    <option value="3">3 - Bom</option>
                                    <option value="2">2 - Razoável</option>
                                    <option value="1">1 - Mau</option>
                                </select>

                                <textarea name="comment" placeholder="Comentário opcional"></textarea>
                                <button type="submit" class="btn-submit-rating">Enviar Avaliação</button>
                            </form>
                        </div>
                    }
                    else if (h.HasRating == true)
                    {
                        <p class="text-success mt-3"><strong>✓ Avaliação enviada com sucesso!</strong></p>
                    }
                </div>
            }
        </div>

    </div>
</div>