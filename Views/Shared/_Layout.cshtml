<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Booking Platform</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #0f172a;
            color: #e2e8f0;
            font-family: 'Roboto', sans-serif;
        }

        h2, h3, h4 {
            font-family: 'Orbitron', sans-serif;
            color: #60a5fa;
        }

        .card {
            border-radius: 1rem;
            background: linear-gradient(145deg, #1e293b, #0f172a);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.8);
            }

        .btn-primary {
            background: linear-gradient(to right, #3b82f6, #60a5fa);
            border: none;
            border-radius: 0.75rem;
            font-weight: bold;
            transition: transform 0.2s ease;
        }

            .btn-primary:hover {
                transform: scale(1.05);
            }

        .btn-success {
            background: linear-gradient(to right, #10b981, #34d399);
            border: none;
            border-radius: 0.75rem;
        }

        .btn-danger {
            background: linear-gradient(to right, #ef4444, #f87171);
            border: none;
            border-radius: 0.75rem;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-gray-900">
        <div class="container">
            <a class="navbar-brand" href="/">Booking</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Housing/List">Housing</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Flight/List">Flights</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Bookings/Index">My Bookings</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-gray-900 text-white text-center py-3 mt-5">
        &copy; 2026 Booking Platform
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
