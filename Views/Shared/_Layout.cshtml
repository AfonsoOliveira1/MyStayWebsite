@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MyStay</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-blue: #003580;
            --secondary-gold: #ffb700;
            --light-bg: #f5f7fa;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--light-bg);
        }

        .navbar {
            background-color: var(--primary-blue) !important;
            padding: 0.5rem 0;
        }

        .navbar-brand img {
            height: 60px;
            transition: transform 0.2s;
        }

        .nav-link {
            font-weight: 500;
            color: rgba(255,255,255,0.9) !important;
        }

            .nav-link:hover {
                color: var(--secondary-gold) !important;
            }

        .btn-auth {
            background-color: white;
            color: var(--primary-blue);
            font-weight: 600;
            border-radius: 6px;
        }

        .badge-role {
            font-size: 0.7rem;
            background-color: var(--secondary-gold);
            color: #000;
            margin-left: 8px;
            vertical-align: middle;
        }

        .page-container {
            min-height: 80vh;
            padding-top: 2rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top shadow">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">
                <img src="~/images/MyStayInBlue-removebg-preview.png" alt="MyStay">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Housing/List"><i class="bi bi-house-door me-1"></i> @Localizer["StaysHeader"]</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Flight/List"><i class="bi bi-airplane me-1"></i> @Localizer["FlightsHeader"]</a></li>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        var role = User.FindFirstValue(ClaimTypes.Role)?.ToUpper();

                        @if (role == "ADMIN")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning fw-bold" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu shadow border-0">
                                    <li><a class="dropdown-item" href="/City/List">Gerir Cidades</a></li>
                                    <li><a class="dropdown-item" href="/Airline/List">Gerir Companhias</a></li>
                                    <li><a class="dropdown-item" asp-controller="Renter" asp-action="List"><i class="bi bi-building me-2"></i>Gerir Renters</a> </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Flight/PendingApprovals">Aprovar Voos</a></li>
                                    <li><a class="dropdown-item" href="/Housing/PendingApprovals">Aprovar Alojamentos</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class ="dropdown-item" asp-controller="Admin" asp-action="Revenue"><i class="bi bi-cash-stack"></i> Receitas</a>
                    
                            </li>
                                </ul>
                            </li>
                        }

                        @if (role == "AIRLINE")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-info fw-bold" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-airplane-engines me-1"></i> Painel Airline
                                </a>
                                <ul class="dropdown-menu shadow border-0">
                                    <li><a class="dropdown-item" href="/Flight/Create"><i class="bi bi-plus-circle me-2"></i>Criar Voo</a></li>
                                    <li><a class="dropdown-item" href="/Flight/MyFlights"><i class="bi bi-list-task me-2"></i>Meus Voos</a></li>
                                </ul>
                            </li>
                        }

                        @if (role == "RENTER")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-info fw-bold" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-building me-1"></i> Painel Renter
                                </a>
                                <ul class="dropdown-menu shadow border-0">
                                    <a class="nav-link" asp-controller="Housing" asp-action="Create">Anunciar Casa</a>
                                    <li><a class="dropdown-item" href="/Housing/MyHousings"><i class="bi bi-list-task me-2"></i>Meus Alojamentos</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav align-items-center">
                    <li class="nav-item dropdown me-3">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            @{
                                var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
                                var flag = culture.StartsWith("pt") ? "🇵🇹" : "🇺🇸";
                            }
                            <span>@flag</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                            <li><a class="dropdown-item" href="?culture=pt-PT">🇵🇹 Português</a></li>
                            <li><a class="dropdown-item" href="?culture=en-US">🇺🇸 English</a></li>
                        </ul>
                    </li>

                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item me-3">
                            <a class="nav-link" href="/Chat/Index"><i class="bi bi-robot me-1"></i> AI</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                <div class="bg-light rounded-circle p-1 me-2" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-person text-dark"></i>
                                </div>
                                @User.Identity.Name
                                <span class="badge badge-role">@User.FindFirstValue(ClaimTypes.Role)</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li><a class="dropdown-item" href="/Bookings/Index"><i class="bi bi-calendar-check me-2"></i> @Localizer["MyBookings"]</a></li>
                                <li><a class="dropdown-item" href="/Account/VerifyCode"><i class="bi bi-person-gear me-2"></i> Definições</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i> Sair</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link me-3" href="/Account/Login">Sign in</a></li>
                        <li class="nav-item"><a class="btn btn-auth px-4" href="/Account/Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container page-container">
        @RenderBody()
    </main>

    <footer class="bg-white border-top py-4 mt-5">
        <div class="container text-center text-muted">
            &copy; 2026 <strong>MyStay</strong> - @Localizer["Footer"]
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>