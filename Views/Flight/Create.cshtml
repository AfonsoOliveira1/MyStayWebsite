@model Booking.web.Models.FlightViewModel

@{
    ViewData["Title"] = "Criar Novo Voo";
}

<div class="container mt-4">
    <h2>Adicionar Novo Voo</h2>
    <hr />

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="control-label">Cidade de Origem</label>
                    <select asp-for="OriginId" class="form-control" asp-items="ViewBag.OriginId">
                        <option value="">-- Selecione a Origem --</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Cidade de Destino</label>
                    <select asp-for="DestinationId" class="form-control" asp-items="ViewBag.DestinationId">
                        <option value="">-- Selecione o Destino --</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Companhia Aérea</label>
                    <select asp-for="AirlineId" class="form-control" asp-items="ViewBag.AirlineId">
                        <option value="">-- Selecione a Companhia --</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="control-label">Data de Partida</label>
                    <input asp-for="DepartureTime" class="form-control" type="datetime-local" />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Preço</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Estado de Aprovação</label>
                    <select asp-for="ApprovalStatus" class="form-control">
                        <option value="APPROVED">Aprovado</option>
                        <option value="PENDING" selected>Pendente</option>
                        <option value="REJECTED">Rejeitado</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Guardar Voo</button>
            <a asp-action="List" class="btn btn-secondary">Voltar à Lista</a>
        </div>
    </form>
</div>