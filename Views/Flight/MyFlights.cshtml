@model IEnumerable<Booking.web.Models.FlightViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-airplane"></i> Os Meus Voos</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Anunciar Novo Voo
        </a>
    </div>

    <table class="table table-hover shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th>Origem</th>
                <th>Destino</th>
                <th>Partida</th>
                <th>Preço</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.OriginCity</td>
                    <td class="fw-bold">@item.DestinationCity</td>
                    <td>@item.DepartureTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-primary">@item.Price.ToString("C")</td>
                    <td>
                        <span class="badge @(item.ApprovalStatus == "APPROVED" ? "bg-success" :
                                                  item.ApprovalStatus == "REJECTED" ? "bg-warning text-dark" : "bg-secondary")">
                        <i class="bi @(item.ApprovalStatus == "APPROVED" ? "bi-check-circle" : "bi-clock")"></i>
                        @item.ApprovalStatus
                    </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>