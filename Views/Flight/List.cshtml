@model IEnumerable<Booking.web.Models.FlightViewModel>

<div class="container mt-4">
    <h2>Voos Disponíveis</h2>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Adicionar Novo Voo</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Origem</th>
                <th>Destino</th>
                <th>Preço</th>
                <th>Estado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OriginCity</td>
                    <td>@item.DestinationCity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.ApprovalStatus</td>
                    <td>
                        <a asp-action="Reserve" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Reservar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>