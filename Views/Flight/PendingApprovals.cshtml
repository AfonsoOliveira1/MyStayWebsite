@model IEnumerable<Booking.web.Models.FlightViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="container mt-4">
    <h2><i class="bi bi-shield-check"></i> @Localizer["PendingApprovals"]</h2>

    <table class="table table-hover mt-3 shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>@Localizer["Origin"]</th>
                <th>@Localizer["Destiny"]</th>
                <th>@Localizer["Price"]</th>
                <th class="text-center">@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Id</td>
                    <td class="align-middle">@item.OriginCity</td>
                    <td class="align-middle">@item.DestinationCity</td>
                    <td class="align-middle fw-bold text-primary">@item.Price.ToString("C")</td>
                    <td class="text-center align-middle">
                        <form asp-action="Approve" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm shadow-sm">
                                <i class="bi bi-check-lg"></i> @Localizer["Approve"]
                            </button>
                        </form>

                        <form asp-action="Reject" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                @Localizer["Reject"]
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>