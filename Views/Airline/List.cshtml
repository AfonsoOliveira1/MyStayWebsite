@model IEnumerable<Booking.web.Models.AirlineViewModel>

@{
    ViewData["Title"] = "Airline Management";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Airline Management</h2>
            <p class="text-muted">List of registered airlines and their contact information.</p>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>@Localizer["CreateAirline"]
        </a>
    </div>

  
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @*  Card *@
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">@Localizer["AirlineName"]</th>
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">@Localizer["Phone"]</th>
                    <th class="px-4 py-3 text-end">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var airline in Model)
                    {
                        <tr>
                            <td class="px-4 py-3 text-muted">#@airline.IdAirline</td>
                            <td class="px-4 py-3 fw-bold">@airline.AirlineName</td>
                            <td class="px-4 py-3">
                                <i class="bi bi-envelope text-muted me-1 small"></i>
                                @(string.IsNullOrEmpty(airline.Email) ? "No email" : airline.Email)
                            </td>
                            <td class="px-4 py-3">
                                <i class="bi bi-telephone text-muted me-1 small"></i>
                                @(string.IsNullOrEmpty(airline.Phone) ? "No phone" : airline.Phone)
                            </td>
                            <td class="px-4 py-3 text-end">
                                <div class="btn-group">
                                    @* Edit *@
                                    <a asp-action="Edit" asp-route-id="@airline.IdAirline"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2">
                                                <i class="bi bi-pencil me-1"></i>@Localizer["Edit"]
                                    </a>

                                    @* Delete *@
                                    <form asp-action="Delete" asp-route-id="@airline.IdAirline" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete @airline.AirlineName?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                    <i class="bi bi-trash me-1"></i>@Localizer["Delete"]
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-info-circle me-2"></i>@Localizer["NoAirlinesFound"].
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>