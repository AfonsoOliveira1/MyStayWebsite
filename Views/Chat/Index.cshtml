@model ChatViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-robot me-2"></i>@Localizer["AIassistant"]</h4>
                    <a href="/" class="btn-close btn-close-white" aria-label="Close"></a>
                </div>

                <div class="card-body" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                    @if (!string.IsNullOrEmpty(Model.Resposta))
                    {
                        <div class="mb-3">
                            <div class="p-3 rounded bg-white shadow-sm border-start border-primary border-4">
                                <strong>Tu:</strong> <p>@Model.Mensagem</p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="p-3 rounded bg-light shadow-sm border-start border-success border-4">
                                <strong>Gemini:</strong>
                               
                                <p style="white-space: pre-line;">
                                    @Model.Resposta.Replace("**", "").Replace("*", "•")
                                </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted mt-5">
                            <i class="bi bi-chat-dots fs-1"></i>
                            <p>@Localizer["ClankerTalk"]</p>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-0">
                    <form asp-controller="Chat" asp-action="EnviarMensagem" method="post">
                        <div class="input-group">
                            <input asp-for="Mensagem" class="form-control" placeholder="@Localizer["AIplaceholder"]" required />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/" class="btn btn-link text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i> @Localizer["Back"]
                </a>
            </div>
        </div>
    </div>
</div>