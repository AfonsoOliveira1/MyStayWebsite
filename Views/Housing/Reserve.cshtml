@model Booking.web.Models.HousingBookingViewModel
<div class="container mt-4">
    <h2>Reserve @Model.HousingName</h2>
    <form asp-action="Reserve" method="post">
        <input type="hidden" asp-for="HousingId" />
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="PricePerNight" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Check-in</label>
                <input asp-for="CheckInDate" type="date" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Check-out</label>
                <input asp-for="CheckOutDate" type="date" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-success">Confirm Reservation</button>
    </form>
</div>