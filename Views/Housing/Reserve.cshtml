@model Booking.web.Models.HousingBookingViewModel

<style>
    .bg-mystay-blue {
        background-color: #003580 !important;
    }

    .btn-mystay {
        background-color: #003580;
        color: white;
        border: none;
    }

        .btn-mystay:hover {
            background-color: #00265c;
            color: white;
        }

    .text-mystay-blue {
        color: #003580;
    }


    .italic {
        font-style: italic;
    }

    .border-dashed {
        border-style: dashed !important;
        border-width: 2px !important;
    }

    .review-card {
        transition: transform 0.2s ease;
        border-radius: 15px;
    }

        .review-card:hover {
            transform: translateY(-3px);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden mb-5">
                <div class="row g-0">
                    <div class="col-md-5 bg-mystay-blue text-white p-5 d-flex flex-column justify-content-between">
                        <div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-house-door-fill fs-3 me-2 text-warning"></i>
                                <span class="text-uppercase fw-bold small">@Localizer["Stay"]</span>
                            </div>
                            <h2 class="fw-bold mb-4">@Model.HousingName</h2>

                            <ul class="list-unstyled">
                                <li class="mb-3 d-flex align-items-center">
                                    <i class="bi bi-tag me-3 opacity-75"></i>
                                    <span><strong>@Model.PricePerNight.ToString("C")</strong> /@Localizer["Night"]</span>
                                </li>
                                <li class="mb-3 d-flex align-items-center">
                                    <i class="bi bi-shield-check me-3 opacity-75"></i>
                                    <span>@Localizer["Confirmation"]</span>
                                </li>
                            </ul>
                        </div>

                        <div class="mt-5 pt-4 border-top border-white border-opacity-25">
                            <p class="small mb-1 opacity-75">Total</p>
                            <h3 class="fw-bold mb-0" id="displayTotal">@Model.TotalPrice.ToString("C")</h3>
                        </div>
                    </div>

                    <div class="col-md-7 bg-white p-5">
                        <h4 class="fw-bold text-mystay-blue mb-4">@Localizer["PickDate"]</h4>

                        <form asp-action="ConfirmReservation" method="post">
                            <input type="hidden" asp-for="HousingId" />
                            <input type="hidden" asp-for="CustomerId" />
                            <input type="hidden" asp-for="HousingName" />
                            <input type="hidden" asp-for="PricePerNight" id="pricePerNightValue" />

                            <div class="row g-3">
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-semibold text-muted">Check-in</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar-event"></i></span>
                                        <input asp-for="CheckInDate" type="date" class="form-control form-control-lg border-start-0 bg-light"
                                               id="checkin" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label class="form-label fw-semibold text-muted">Check-out</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-calendar-check"></i></span>
                                        <input asp-for="CheckOutDate" type="date" class="form-control form-control-lg border-start-0 bg-light"
                                               id="checkout" required />
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-mystay btn-lg w-100 fw-bold py-3 shadow-sm mb-3">
                                        @Localizer["Reserve"] <i class="bi bi-arrow-right ms-2"></i>
                                    </button>

                                    <div class="text-center">
                                        <a href="/Housing/List" class="text-decoration-none text-muted small">
                                            <i class="bi bi-x-circle me-1"></i> @Localizer["CancelAndLeave"]
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @* avaliacoes *@
            <div class="d-flex align-items-center justify-content-between mb-4 mt-5">
                <h4 class="fw-bold text-mystay-blue mb-0">
                    <i class="bi bi-chat-left-text-fill me-2 text-warning"></i>
                    @Localizer["GuestReviews"]
                </h4>
                @if (Model.Ratings != null && Model.Ratings.Any())
                {
                    <span class="badge bg-mystay-blue px-3 py-2 rounded-pill">
                        @(Model.Ratings.Average(r => r.Score).ToString("0.0")) ⭐ — @Model.Ratings.Count @Localizer["Reviews"]
                    </span>
                }
            </div>

            @if (Model.Ratings != null && Model.Ratings.Any())
            {
                <div class="row g-3">
                    @foreach (var r in Model.Ratings)
                    {
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100 review-card p-3 bg-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                <i class="bi bi-person-fill text-mystay-blue"></i>
                                            </div>
                                            <span class="fw-bold small text-truncate" style="max-width: 150px;">@r.CustomerName</span>
                                        </div>
                                        <div class="text-warning small">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= r.Score ? "-fill" : "")"></i>
                                            }
                                        </div>
                                    </div>
                                    <p class="text-muted small mb-0 italic" style="line-height: 1.6;">
                                        <i class="bi bi-quote opacity-50"></i> @r.Comment
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center p-5 bg-white rounded-4 shadow-sm border border-dashed">
                    <i class="bi bi-chat-dots fs-1 text-muted opacity-25"></i>
                    <p class="text-muted mt-2">@Localizer["NoReviewsYet"]</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const checkinInput = document.getElementById('checkin');
        const checkoutInput = document.getElementById('checkout');
        const displayTotal = document.getElementById('displayTotal');
        const price = parseFloat("@Model.PricePerNight".replace(',', '.'));

        function updateUI() {
            const start = new Date(checkinInput.value);
            const end = new Date(checkoutInput.value);

            if (start && end && end > start) {
                const diffTime = Math.abs(end - start);
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                const total = diffDays * price;

                displayTotal.innerText = total.toLocaleString('pt-PT', { style: 'currency', currency: 'EUR' });
            } else {
                displayTotal.innerText = (0).toLocaleString('pt-PT', { style: 'currency', currency: 'EUR' });
            }
        }

        checkinInput.addEventListener('change', () => {
            const nextDay = new Date(checkinInput.value);
            nextDay.setDate(nextDay.getDate() + 1);
            checkoutInput.min = nextDay.toISOString().split('T')[0];
            updateUI();
        });

        checkoutInput.addEventListener('change', updateUI);

        updateUI();
    </script>
}