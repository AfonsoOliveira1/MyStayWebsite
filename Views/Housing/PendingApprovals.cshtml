@using System.Text.Encodings.Web
@model IEnumerable<Booking.web.Models.HousingViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-house-gear text-primary me-2"></i>@Localizer["PendingStays"]</h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Photo"]</th>
                        <th>@Localizer["Stay"]</th>
                        <th>@Localizer["City"]</th>
                        <th>@Localizer["Price"]/@Localizer["Night"]</th>
                        <th>@Localizer["Description"]</th>
                        <th class="text-end" style="padding-right: 2rem;">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="bi bi-check2-circle fs-2"></i><br>
                                @Localizer["NoStays"]
                            </td>
                        </tr>
                    }
                    @foreach (var house in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(house.ImageUrl))
                                {
                                    <img src="@house.ImageUrl" alt="Housing" class="rounded" style="width: 60px; height: 45px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary text-white rounded text-center" style="width: 60px; height: 45px; line-height: 45px;">
                                        <i class="bi bi-camera"></i>
                                    </div>
                                }
                            </td>
                            <td class="align-middle">
                                <strong>@house.Name</strong><br>
                                <small class="text-muted">ID: #@house.Id</small>
                            </td>
                            <td class="align-middle">@house.CityName</td>

                            <td class="align-middle text-nowrap">@house.PricePerNight.ToString("F2") €"</td>

                            <td class="align-middle" style="width: 35%;">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-pencil-square text-primary" style="font-size: 0.9rem;"></i>
                                    <input type="text" name="description" form="form-approve-@house.Id"
                                           class="form-control form-control-sm border-0 bg-transparent p-0"
                                           value="@house.Description" style="box-shadow: none; min-width: 200px;" />
                                </div>
                            </td>

                            <td class="align-middle text-end">
                                <div class="d-inline-flex align-items-center gap-2" style="padding-right: 1rem;">
                                    <form asp-action="Approve" asp-controller="Housing" method="post" id="form-approve-@house.Id" class="d-inline-flex gap-2">
                                        <input type="hidden" name="id" value="@house.Id" />

                                        <div class="input-group input-group-sm" style="width: 110px;">
                                            <input type="number" name="commissionRate" class="form-control" placeholder="Taxa %" step="0.1" required />
                                            <span class="input-group-text">%</span>
                                        </div>

                                        <button type="submit" class="btn btn-success btn-sm text-nowrap">
                                            <i class="bi bi-check2-circle"></i> @Localizer["Approve"]
                                        </button>
                                    </form>

                                    <form asp-action="Reject" asp-controller="Housing" asp-route-id="@house.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm text-nowrap"
                                                onclick="return confirm('Tem a certeza que deseja rejeitar este alojamento?')">
                                            <i class="bi bi-x-circle"></i> @Localizer["Reject"]
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

