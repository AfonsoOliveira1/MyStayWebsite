@using System.Text.Encodings.Web
@model IEnumerable<Booking.web.Models.HousingViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-house-gear text-primary"></i> Casas Pendentes de Aprovação</h2>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Photo"]</th>
                        <th>@Localizer["Stay"]</th>
                        <th>@Localizer["City"]</th>
                        <th>@Localizer["Price"]/@Localizer["Night"]</th>
                        <th>@Localizer["Description"]</th> @* Nova Coluna *@
                        <th class="text-center">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="bi bi-check2-circle fs-2"></i><br>
                                @Localizer["NoStays"]
                            </td>
                        </tr>
                    }
                    @foreach (var house in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(house.ImageUrl))
                                {
                                    <img src="@house.ImageUrl" alt="Housing" class="rounded" style="width: 60px; height: 45px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-secondary text-white rounded text-center" style="width: 60px; height: 45px; line-height: 45px;">
                                        <i class="bi bi-camera"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@house.Name</strong><br>
                                <small class="text-muted">ID: #@house.Id</small>
                            </td>
                            <td>@house.CityName</td>
                            <td>@house.PricePerNight.ToString("C")</td>

                            <td style="max-width: 250px;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <small class="text-truncate d-inline-block" style="max-width: 180px;" id="desc-@house.Id">
                                        @house.Description
                                    </small>
                                    <button class="btn btn-link btn-sm p-0 ms-2" onclick="openEditModal('@house.Id', '@JavaScriptEncoder.Default.Encode(house.Description)')">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </div>
                            </td>

                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <form asp-action="Approve" asp-controller="Housing" asp-route-id="@house.Id" method="post">
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-check-circle"></i> @Localizer["Approve"]
                                        </button>
                                    </form>

                                    <form asp-action="Reject" asp-controller="Housing" asp-route-id="@house.Id" method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-x-circle"></i> @Localizer["Reject"]
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* edit descricao *@
<div class="modal fade" id="editDescModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["Edit"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="modalHouseId" />
                <textarea class="form-control" id="modalDescription" rows="5"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                <button type="button" class="btn btn-primary" onclick="saveDescription()">@Localizer["SaveChanges"]</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id, desc) {
            document.getElementById('modalHouseId').value = id;
            document.getElementById('modalDescription').value = desc;
            new bootstrap.Modal(document.getElementById('editDescModal')).show();
        }

        async function saveDescription() {
            const id = document.getElementById('modalHouseId').value;
            const desc = document.getElementById('modalDescription').value;

            const response = await fetch(`/Housing/UpdateDescription?id=${id}&description=${encodeURIComponent(desc)}`, {
                method: 'POST'
            });

            if (response.ok) {
                document.getElementById(`desc-${id}`).innerText = desc;
                bootstrap.Modal.getInstance(document.getElementById('editDescModal')).hide();
            } else {
                alert("Erro ao atualizar descrição.");
            }
        }
    </script>
}