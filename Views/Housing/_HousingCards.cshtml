@model IEnumerable<Booking.web.Models.HousingViewModel>

@foreach (var item in Model)
{
    var hasRatings = item.Ratings != null && item.Ratings.Any();
    var avg = hasRatings ? item.Ratings.Average(r => r.Score) : 0;
    var total = hasRatings ? item.Ratings.Count : 0;

    <section class="hotel-card-mini">
        <div class="image-wrapper">
            <img src="@item.ImageUrl" alt="@item.Name" onerror="this.src='/img/default-housing.jpg'">
        </div>

        <div class="content-mini">
            <div class="info-top">
                <div class="d-flex justify-content-between align-items-start">
                    <h2 class="text-truncate" style="max-width: 250px; margin: 0;">@item.Name</h2>

                    @if (hasRatings)
                    {
                        <div class="stars-display">
                            <i class="bi bi-star-fill"></i> @avg.ToString("0.0")
                        </div>
                    }
                </div>

                <p class="loc-mini"><i class="bi bi-geo-alt"></i> @item.CityName</p>

                <small class="text-white-50">
                    @if (hasRatings)
                    {
                        <span><i class="bi bi-chat-right-text me-1"></i> @total @(total == 1 ? "avaliação" : "avaliações")</span>
                    }
                    else
                    {
                        <span class="italic"><i class="bi bi-stars me-1"></i> Novo na plataforma</span>
                    }
                </small>
            </div>

            <div class="footer-mini">
                <div class="price-box">
                    <span class="old-p text-decoration-line-through small opacity-50">
                        @((item.PricePerNight * 1.2m).ToString("C", new System.Globalization.CultureInfo("pt-PT")))
                    </span>
                    <span class="new-p">@item.PricePerNight.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</span>
                </div>

                <div class="button-group d-flex align-items-center gap-2">

                    @if (User.IsInRole("ADMIN"))
                    {
                        <form asp-controller="Admin" asp-action="UpdateCommission" method="post" class="d-flex gap-1 align-items-center mb-1">
                            <input type="hidden" name="id" value="@item.Id" />

                            <div class="input-group input-group-sm" style="width: 100px;">
                                <input type="number" name="newRate"
                                       class="form-control form-control-sm border-warning fw-bold text-center"
                                       value="@(item.BookingCommissionRate?.ToString( System.Globalization.CultureInfo.InvariantCulture))"
                                       step="0.1" />
                                <span class="input-group-text bg-warning border-warning fw-bold" style="padding: 0 4px;">%</span>
                            </div>

                            <button type="submit" class="btn btn-sm btn-warning shadow-sm">
                                <i class="bi bi-check-lg"></i>
                            </button>
                        </form>
                    }

                    <a asp-controller="Housing" asp-action="Reserve" asp-route-id="@item.Id" class="btn-mini">
                        @Localizer["Reserve"]
                    </a>
                </div>
            </div>
        </div>
    </section>
}