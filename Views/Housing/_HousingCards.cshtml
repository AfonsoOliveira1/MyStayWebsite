@model IEnumerable<Booking.web.Models.HousingViewModel>

@foreach (var item in Model)
{
    var hasRatings = item.Ratings != null && item.Ratings.Any();
    var avg = hasRatings ? item.Ratings.Average(r => r.Score) : 0;
    var total = hasRatings ? item.Ratings.Count : 0;

    <section class="hotel-card-mini">
        <div class="image-wrapper">
            <img src="@item.ImageUrl" alt="@item.Name" onerror="this.src='/img/default-housing.jpg'">
        </div>

        <div class="content-mini">
            <div class="info-top">
                <h2>
                    <span class="text-truncate" style="max-width: 250px;">@item.Name</span>
                    @if (hasRatings)
                    {
                        <div class="stars-display">
                            <i class="bi bi-star-fill"></i> @avg.ToString("0.0")
                        </div>
                    }
                </h2>
                <p class="loc-mini"><i class="bi bi-geo-alt"></i> @item.CityName</p>

                @if (hasRatings)
                {
                    <small class="text-white-50">
                        <i class="bi bi-chat-right-text me-1"></i> @total @(total == 1 ? "avaliação" : "avaliações")
                    </small>
                }
                else
                {
                    <small class="text-white-50 italic">
                        <i class="bi bi-stars me-1"></i> Novo na plataforma
                    </small>
                }
            </div>

            <div class="footer-mini">
                <div class="price-box">
                    <span class="old-p text-decoration-line-through small opacity-50">
                        @((item.PricePerNight * 1.2m).ToString("C", new System.Globalization.CultureInfo("pt-PT")))
                    </span>
                    <span class="new-p">@item.PricePerNight.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</span>
                    <p class="tax-mini mb-0 small opacity-75">@Localizer["Taxes"]</p>
                </div>

                @* --- GRUPO DE BOTÕES --- *@
                <div class="button-group d-flex gap-2 align-items-center">

                    @* BOTÃO DE COMISSÃO (APENAS ADMIN) *@
                    @if (User.IsInRole("ADMIN"))
                    {
                        <button onclick="alterarComissao(@item.Id, @(item.BookingCommissionRate ?? 0))"
                                class="btn"
                                style="background:#febb02; border:none; border-radius:6px; padding: 8px 12px; color: #003580;"
                                title="Alterar Comissão">
                            <i class="bi bi-percent fw-bold"></i>
                        </button>
                    }

                    @* BOTÃO RESERVAR *@
                    <a asp-controller="Housing" asp-action="Reserve" asp-route-id="@item.Id" class="btn-mini">
                        @Localizer["Reserve"]
                    </a>
                </div>
            </div>
        </div>
    </section>
}