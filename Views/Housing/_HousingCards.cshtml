@model IEnumerable<Booking.web.Models.HousingViewModel>

@foreach (var item in Model)
{
    <section class="hotel-card-mini">
        <div class="image-wrapper">
            <img src="@item.ImageUrl" alt="@item.Name">
        </div>

        <div class="content-mini">
            <div class="info-top">
                <h2>@item.Name <span class="stars-mini">★ @item.HousingRatingViewModel.Score</span></h2>
                <p class="loc-mini">@item.Location</p>
                @if (User.IsInRole("ADMIN"))
                {
                    <span class="badge bg-warning text-dark">Comissão: @(item.BookingCommissionRate ?? 0)%</span>
                }
            </div>

            <div class="footer-mini">
                <div class="price-box">
                    <span class="old-p">@((item.PricePerNight * 1.2m).ToString("C", new System.Globalization.CultureInfo("pt-PT")))</span>
                    <span class="new-p">@item.PricePerNight.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</span>
                    <p class="tax-mini">@Localizer["Taxes"]</p>
                </div>

                <div class="button-group" style="display: flex; gap: 8px;">
                    @if (User.IsInRole("ADMIN"))
                    {
                        <button onclick="alterarComissao(@item.Id, @(item.BookingCommissionRate ?? 0))" class="btn-commission" style="border:none; cursor:pointer;">
                            <i class="bi bi-percent"></i> %
                        </button>
                    }
                    <a asp-action="Reserve" asp-route-id="@item.Id" class="btn-mini" style="text-decoration: none; text-align: center;">@Localizer["Reserve"]</a>
                </div>
            </div>
        </div>
    </section>
}
<script>
    function alterarComissao(id, taxaAtual) {
        const novaTaxa = prompt("Nova taxa de comissão (%):", taxaAtual);

        if (novaTaxa !== null && novaTaxa !== "" && !isNaN(novaTaxa)) {
            const url = "/Admin/UpdateCommission?id=" + id + "&newRate=" + novaTaxa.replace(',', '.');

            fetch(url, {
                method: 'POST'
            })
            .then(res => {
                if (res.ok) {
                    alert("Sucesso!");
                    location.reload();
                } else {
                    alert("Erro ao atualizar. Verifica se a API está ligada.");
                }
            })
            .catch(() => alert("Erro de conexão."));
        }
    }
</script>

