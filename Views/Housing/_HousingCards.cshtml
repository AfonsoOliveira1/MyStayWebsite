@model IEnumerable<Booking.web.Models.HousingViewModel>

@foreach (var item in Model)
{
    <section class="hotel-card-mini">
        <div class="image-wrapper">
            <img src=@item.ImageUrl alt="@item.Name">
        </div>

        <div class="content-mini">
            <div class="info-top">
                <h2>@item.Name <span class="stars-mini">@item.HousingRatingViewModel.Score</span></h2>
                <p class="loc-mini">@item.Location</p>
            </div>

            <div class="footer-mini">
                <div class="price-box">
                    <span class="old-p">@((item.PricePerNight * 1.2m).ToString("C", new System.Globalization.CultureInfo("pt-PT")))</span>
                    <span class="new-p">@item.PricePerNight.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</span>
                    <p class="tax-mini">@Localizer["Taxes"]</p>
                </div>

                <a asp-action="Reserve" asp-route-id="@item.Id" class="btn-mini" style="text-decoration: none; text-align: center;">@Localizer["Reserve"]</a>
            </div>
        </div>
    </section>
}

<style>
  .hotel-card-mini {
    width: 100%;
    height: 170px; /* altura fixa igual para todos */
    margin: 0; /* remove centralização */
    background: #003580;
    border-radius: 12px;
    display: flex;
    overflow: hidden;
    color: #fff;
    font-family: 'Segoe UI', Arial, sans-serif;
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.image-wrapper {
    flex: 0 0 220px; /* largura fixa da imagem */
    height: 100%;
}

.image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.content-mini {
    flex: 1;
    padding: 16px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
}

.info-top h2 {
    font-size: 1.1rem;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.stars-mini {
    color: #febb02;
    font-size: 0.85rem;
}

.loc-mini {
    font-size: 0.85rem;
    opacity: 0.85;
    margin: 6px 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.footer-mini {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.price-box {
    display: flex;
    flex-direction: column;
}

.old-p {
    font-size: 0.75rem;
    text-decoration: line-through;
    color: #ffb3b3;
}

.new-p {
    font-size: 1.5rem;
    font-weight: bold;
    line-height: 1;
}

.tax-mini {
    font-size: 0.7rem;
    opacity: 0.75;
}

.btn-mini {
    background: #006ce4;
    color: white;
    border: none;
    padding: 9px 18px;
    border-radius: 6px;
    font-weight: bold;
    font-size: 0.85rem;
    cursor: pointer;
    transition: background 0.2s;
    text-align: center;
}

.btn-mini:hover {
    background: #0056b3;
}

</style>