@model Booking.web.Models.HousingViewModel

<section class="hotel-card-mini">
  <div class="image-wrapper">
        @* Se tiveres uma URL de imagem na BD, usa @Model.ImageUrl, senão mantemos a estática por agora *@
    <img src="https://images.homify.com/v1448129217/p/photo/image/1135013/7.jpg" alt="@Model.Name">
  </div>

  <div class="content-mini">
    <div class="info-top">
      <h2>@Model.Name <span class="stars-mini">@Model.HousingRatingViewModel.Score</span></h2>
      <p class="loc-mini">@Model.Location</p>
    </div>

    <div class="footer-mini">
      <div class="price-box">
        <span class="old-p">@((Model.PricePerNight * 1.2m).ToString("C"))</span>
        <span class="new-p">@Model.PricePerNight.ToString("C")</span>
        <p class="tax-mini">+ taxas e impostos</p>
      </div>

      <a asp-action="Reserve" asp-route-id="@Model.Id" class="btn-mini" style="text-decoration: none; text-align: center;">Reservar</a>
    </div>
  </div>
</section>

<style>
  .hotel-card-mini {
    max-width: 500px; 
    margin: 20px auto;
    background: #003580;
    border-radius: 12px;
    display: flex;
    height: 160px;
    overflow: hidden;
    color: #fff;
    font-family: 'Segoe UI', Arial, sans-serif;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }

  .image-wrapper {
    flex: 0 0 210px;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content-mini {
    flex: 1;
    padding: 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
  }

  .info-top h2 {
    font-size: 1.15rem;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .stars-mini {
    color: #febb02;
    font-size: 0.85rem;
  }

  .loc-mini {
    font-size: 0.8rem;
    opacity: 0.8;
    margin: 5px 0;
  }

  .footer-mini {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .old-p {
    font-size: 0.8rem;
    text-decoration: line-through;
    color: #ff9b9b;
    display: block;
  }

  .new-p {
    font-size: 1.6rem;
    font-weight: bold;
    line-height: 1;
  }

  .tax-mini {
    font-size: 0.7rem;
    margin-top: 2px;
    opacity: 0.7;
  }

  .btn-mini {
    background: #006ce4;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: bold;
    font-size: 0.85rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-mini:hover {
    background: #0056b3;
  }
</style>