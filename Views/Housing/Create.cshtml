@model Booking.web.Models.HousingCreateDto

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-primary text-white p-4 rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-house-add me-2"></i>@Localizer["AddHousing"]</h3>
                </div>

                <form asp-action="Create" method="post" class="p-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="CompanyId" value="1" />

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Name" class="form-label fw-bold">@Localizer["Name"]</label>
                            <input asp-for="Name" class="form-control" placeholder="@Localizer["StayNamePlaceholder"]" required>
                        </div>

                        <div class="col-12">
                            <label asp-for="ImageUrl" class="form-label fw-bold">@Localizer["StayImage"]</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://exemplo.com/foto.jpg" oninput="updatePreview(this)" required>
                            </div>
                            <div class="mt-3 text-center d-none" id="preview-box">
                                <p class="small text-muted mb-1">@Localizer["Preview"]:</p>
                                <img id="img-preview" src="#" class="rounded-3 shadow-sm border" style="max-height: 250px; width: 100%; object-fit: cover;">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CityId" class="form-label fw-bold">@Localizer["City"]</label>
                            <select asp-items="ViewBag.Cities" asp-for="CityId" class="form-select" required>
                                <option value="">@Localizer["SelectCity"]</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PricePerNight" class="form-label fw-bold">@Localizer["Price"]</label>
                            <div class="input-group">
                                <span class="input-group-text">€</span>
                                <input asp-for="PricePerNight" type="number" step="0.01" class="form-control" required>
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label fw-bold">@Localizer["Description"]</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="@Localizer["StayDescriptionPlaceholder"]"></textarea>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="@Url.Action("List")" class="btn btn-outline-secondary px-4 rounded-pill">@Localizer["Cancel"]</a>
                        <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">@Localizer["PublicStays"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        //é chamada sempre q o user escrever algo
        function updatePreview(input) {
            const box = document.getElementById('preview-box');// controlar a visibilidade da <div>
            const img = document.getElementById('img-preview');//mudar oq a imagem esta a mostrar

            // ver se ha texto
            if (input.value) {
                // definir a origem da imagem
                img.src = input.value;

                // remover a classe 'd-none' para mostrar a imagem
                box.classList.remove('d-none');
            } else {
                // esconder a caixa de preview
                box.classList.add('d-none');
            }
        }
    </script>
}