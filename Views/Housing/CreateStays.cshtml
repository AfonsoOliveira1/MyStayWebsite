@model YourProjectName.Models.DTOs.Housings.HousingCreateDto

<form asp-controller="Housing" asp-action="Create" method="post" enctype="multipart/form-data" class="publish-form">
    <div class="main-layout">
        <div class="image-section">
            <div class="image-grid">
                <div class="main-img-upload">
                    <input type="file" id="img-main" name="MainImage" hidden accept="image/*">
                    <label for="img-main" class="upload-placeholder">
                        <strong>@Localizer["StayDataMainImage"]</strong>
                    </label>
                </div>

                <div class="sec-img-col">
                    <div class="sec-img-upload">
                        <input type="file" id="img-sec-1" name="SecondaryImages" hidden accept="image/*">
                        <label for="img-sec-1">ImgSec</label>
                    </div>
                    <div class="sec-img-upload">
                        <input type="file" id="img-sec-2" name="SecondaryImages" hidden accept="image/*">
                        <label for="img-sec-2">ImgSec</label>
                    </div>
                </div>
            </div>
            </div>

        <div class="details-section">
            <div class="input-group">
                <label asp-for="Name">@Localizer["StayDataName"]</label>
                <input asp-for="Name" type="text" placeholder="Ex: Hotel Magnífico" required>
            </div>

            <div class="input-group">
                <label asp-for="Price">@Localizer["StayDataPrice"]</label>
                <input asp-for="Price" type="number" step="0.01" placeholder="€ 0.00" required>
            </div>

            <div class="input-group">
                <label asp-for="Rooms">@Localizer["StayDataRooms"]:</label>
                <input asp-for="Rooms" type="number" required>
            </div>

            <div class="input-group">
                <label asp-for="Capacity">@Localizer["StayDataQtdPeople"]:</label>
                <select asp-for="Capacity">
                    <option value="1">1 @Localizer["People"]</option>
                    <option value="2">2 @Localizer["People"]</option>
                    <option value="4">3-4 @Localizer["People"]</option>
                    <option value="6">5+</option>
                </select>
            </div>

            <div class="input-group">
                <label asp-for="Description">@Localizer["StayDatadescription"]:</label>
                <textarea asp-for="Description" rows="4"></textarea>
            </div>
        </div>
    </div>

    <div class="form-footer">
        <button type="button" class="btn-cancel" onclick="window.history.back()">@Localizer["Cancel"]</button>
        <button type="submit" class="btn-submit">@Localizer["PublishStays"]</button>
    </div>
</form>