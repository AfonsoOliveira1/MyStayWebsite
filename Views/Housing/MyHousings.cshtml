@model IEnumerable<Booking.web.Models.HousingViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
        <h2 class="text-secondary"><i class="bi bi- house-check"></i> @Localizer["MyStays"]</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> @Localizer["AddHousing"]
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                         class="card-img-top" style="height: 200px; object-fit: cover;" alt="Foto do alojamento">

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title text-truncate">@item.Name</h5>
                            <span class="badge @(item.ApprovalStatus == "APPROVED" ? "bg-success" : "bg-warning text-dark")">
                                @item.ApprovalStatus
                            </span>
                        </div>
                        <p class="text-muted mb-1"><i class="bi bi-geo-alt"></i> @item.CityName</p>
                        <p class="fw-bold text-primary">@item.PricePerNight€ <small class="text-muted">/ @Localizer["Night"]</small></p>
                    </div>

                    <div class="card-footer bg-transparent border-0 d-grid gap-2 pb-3">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">@Localizer["Edit"]</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>