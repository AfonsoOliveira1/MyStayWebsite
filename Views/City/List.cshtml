@model IEnumerable<Booking.web.Models.CityViewModel>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">@Localizer["ManageDestiny"]</h2>
            <p class="text-muted">@Localizer["CityList"]</p>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>@Localizer["AddCity"]
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm">@TempData["Success"]</div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="px-4 py-3">ID</th>
                    <th class="px-4 py-3">@Localizer["Name"]</th>
                    <th class="px-4 py-3 text-end">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var city in Model)
                {
                    <tr>
                        @{
                            var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
                            var flag = culture.StartsWith("pt") ? "🇵🇹" : "🇺🇸";
                        }
                        @if(culture.StartsWith("pt"))
                        {
                              <td class="px-4 py-3 text-muted">#@city.Id</td>
                              <td class="px-4 py-3 fw-bold">@(city.Citynamept ?? "Não há nome português para esta cidade")</td>
                        }
                        else
                        {
                              <td class="px-4 py-3 text-muted">#@city.Id</td>
                              <td class="px-4 py-3 fw-bold">@(city.Citynameen ?? "No english name found for this city")</td>
                        }
                        <td class="px-4 py-3 text-end">
                            <a asp-action="Edit" asp-route-id="@city.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2">
                                <i class="bi bi-pencil me-1"></i>@Localizer["Edit"]
                            </a>

                            <form asp-action="Delete" asp-route-id="@city.Id" method="post" style="display:inline;"
                                  onsubmit="return confirm('@Localizer["ConfirmDelete"]');">
                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                    <i class="bi bi-trash me-1"></i>@Localizer["Delete"]
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>  